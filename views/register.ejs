<!-- Start of Registration Form -->

<div class="row mt-5">

    <div class="col-md-6 m-auto">

      <div class="card card-body">

        <h1 class="text-center mb-3"> <i class="fas fa-user-plus"></i> Register </h1> <!-- Header For the Form -->

        <%- include('errormessages/errormsg'); %> <!-- Include link to messages.js file to handle error prompts -->
        
        <form action="/users/register" method="POST"> <!-- Create form with an action that redirects the user to the register page -->

          <div class="form-group">

            <label for="name">Name (please use first/last name)</label> <!-- Heading label for form -->

            <input type="name" id="name" name="name" class="form-control" placeholder="Please Enter Your Name" value="<%= typeof name != 'undefined' ? name : '' %>"/> <!-- Textbox form item for "Name" -->

          </div>

          <div class="form-group">

            <label for="email">Email (w/ @ and .com prefix)</label> <!-- Heading label for form -->

            <input type="email" id="email" name="email" class="form-control" placeholder="Please Enter Your Email" value="<%= typeof email != 'undefined' ? email : '' %>"/> <!-- Textbox form item for "Email" -->

          </div>

          <div class="form-group">

            <label for="password">Password (must be eight characters or longer)</label> <!-- Heading label for form -->

            <input type="password" id="password" name="password" class="form-control" placeholder="Please Enter Your Password" value="<%= typeof password != 'undefined' ? password : '' %>"/> <!-- Textbox form item for "Password" -->

          </div>

          <div class="form-group">

            <label for="confirmpassword">Confirm Password (must match first password)</label> <!-- Heading label for form -->

            <input type="password" id="confirmpassword" name="confirmpassword" class="form-control" placeholder="Confirm Your Password" value="<%= typeof confirmpassword != 'undefined' ? confirmpassword : '' %>"/> <!-- Textbox form item for "Confirm Password" -->

          </div>

          <button type="submit" class="btn btn-primary btn-block">Register For An Account!</button> <!-- Button with text "Register" that triggers form action -->

          <a href="/users/welcome" class="btn btn-secondary btn-block">Go Back</a> <!-- Button with text "Go Back" that will redirect the user to welcome.ejs"-->

        </form>

        <p class="lead mt-4">Already Have A User Account? <a href="/users/login">Login Here!</a></p> <!-- Button with text "Login" that will redirect the user to login.ejs"-->

      </div>

    </div>

  </div>

