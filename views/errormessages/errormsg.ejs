<!--- This page handles errors encountered during the login process.  -->

<% if(typeof errors != 'undefined') { %>

    <% errors.forEach(function(error) { %> 

        <div class = "alert alert-warning alert-dismissible fade show" role = "alert"> <!--- Creates div with class styling.  -->

        <%= error.msg %> <!--- Display error value.  -->

        <button type = "button" class = "close" data-dismiss = "alert" aria-label = "Close"> <!--- Button to remove error prompt from page. -->

            <span aria-hidden = "true"> &times; </span>

        </button>

        </div>

    <% }); %>

<% } %>

